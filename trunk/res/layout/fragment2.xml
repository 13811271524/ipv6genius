<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/access_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/bg_main"
    android:gravity="center_horizontal|fill_vertical"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/connection_state"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/main_init" />

    <Button
        android:id="@+id/open_button"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_below="@id/connection_state"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_open_grey"
        android:width="120dp" />

    <TextView
        android:id="@+id/information_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/open_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/dialog_box"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:scrollbars="vertical" />

</RelativeLayout>